<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jmd2479.justintimecbt.AddBehaviorActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/behaviorNameLabel"
            android:id="@+id/addBehaviorTextView"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addBehaviorEditText"
            android:textSize="30dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:text="@string/addBtnText"
            android:textSize="30dp"
            android:textColor="#DDD"
            android:paddingRight="80dp"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/add2"
            android:id="@+id/createNewBehavior"
            android:background="@drawable/home_btn"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
