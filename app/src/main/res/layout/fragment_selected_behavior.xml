<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/selected_behavior_textView"
            android:background="#A5978A"
            android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textSize="30dp"
        android:background="#CEBDAD"
        android:text="Triggers"
        android:id="@+id/selected_behavior_triggers_textView"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textSize="30dp"
        android:background="#CEBDAD"
        android:text="Rationalizations"
        android:id="@+id/selected_behavior_rationalizations_textView"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textSize="30dp"
        android:background="#CEBDAD"
        android:text="Consequences"
        android:id="@+id/selected_behavior_consequences_textView"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textSize="30dp"
        android:background="#CEBDAD"
        android:text="Alternatives"
        android:id="@+id/selected_behavior_alternatives_textView"
        android:gravity="center" />
</LinearLayout>